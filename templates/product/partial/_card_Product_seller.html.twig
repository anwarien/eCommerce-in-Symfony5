<div class="card" style="width: 300px; height:350px;">
    {% if seller.imageName %}
    <div class="david-img">
        <img src="{{ vich_uploader_asset(seller,'imageFile')}}" alt="" style="width: 100%; height: 200px;">
    </div>
    {% else %}
    Pas d'iamge
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">{{seller.name}}</h5>
        <div>
            <h6 class="card-title">Experience</h6>
            <p class="card-text">{{substring(seller.experience,{start:0,end:20})}}...</p>
        </div>
        <a href="{{path('cart_add',{id:product.id,slug:product.slug})}}"
            class="genric-btn danger circle medium float-right">
            <i class="fa fa-shopping-cart mr-1"></i>
            Ajouter
        </a>
    </div>

</div>
{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
<div class="david-droga-area  pb-260 mt-5">
    <div class="container">
        <div class="row">
            <div class="col-md-9 offset-md-2">

                <div class="container mt-5">
                    <h1>DÃ©tail</h1>

                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ post.id }}</td>
                            </tr>
                            <tr>
                                <th>Title</th>
                                <td>{{ post.title }}</td>
